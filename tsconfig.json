{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "es2017"
        ],
        // "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "moduleResolution": "node",
        "rootDirs": [
            "src"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    }
}